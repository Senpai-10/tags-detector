{
    "name": "tags detector",
    "description": "detect tags in hentai websites and warn the user",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "src/html/options.html",
        "open_in_tab": false
    },
    "background": {
        "scripts": ["src/js/index.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://nhentai.net/*"
            ],
            "js": ["src/js/content.js"]
        }
    ],
	"icons": { 
		"16": "icons/16.png",
        "48": "icons/48.png",
		"128": "icons/128.png" 
	}
}
